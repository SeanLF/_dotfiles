// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "cursor_shape": "underline",
    "blinking": "on",
    "max_scroll_history_lines": 20000
  },
  "minimap": {
    "show": "never"
  },
  "buffer_font_fallbacks": ["Menlo", "Monaco", "Courier New", "monospace"],
  "buffer_font_family": "IntelOne Mono",
  "show_edit_predictions": true,
  "soft_wrap": "editor_width",
  "tab_size": 2,
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 13.0,
  "format_on_save": "on",
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/node_modules",
    "**/vendor/bundle",
    "**/tmp",
    "**/log",
    "**/.bundle"
  ],
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "auto_install_extensions": {
    "docker-compose": true,
    "dockerfile": true,
    "git-firefly": true,
    "html": true,
    "make": true,
    "marksman": true,
    "rainbow-csv": true,
    "ruby": true,
    "scss": true,
    "sql": true,
    "terraform": true
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop", "!solargraph", "..."]
    },
    // Enable herb and ruby-lsp for *.html.erb files
    "HTML+ERB": {
      "language_servers": ["herb", "ruby-lsp", "..."],
      "formatter": {
        "external": {
          "command": "erb-formatter",
          "arguments": ["--stdin-filename", "{buffer_path}"]
        }
      }
    },
    // Enable ruby-lsp for *.js.erb files
    "JS+ERB": {
      "language_servers": ["ruby-lsp", "..."]
    },
    // Enable ruby-lsp for *.yaml.erb files
    "YAML+ERB": {
      "language_servers": ["ruby-lsp", "..."]
    }
  }
}
